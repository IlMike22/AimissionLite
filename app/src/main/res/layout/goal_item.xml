<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.aimissionlite.LandingPageViewModel" />
    </data>

    <LinearLayout
        style="@style/goalContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/goal_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/goal_title"
                    style="@style/goalTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="A very long Goal Title with a additional information" />

                <TextView
                    android:id="@+id/goal_description"
                    style="@style/goalDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Some Goal Description here. Here we can have a much longer text with several informations." />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/goal_button_status_change"
                    android:contentDescription="@string/goal_item_image_button_status_changed_content_description"
                    style="@style/GoalImageButtonStatusChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher_background" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>