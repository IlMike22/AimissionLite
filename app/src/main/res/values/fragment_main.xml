<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="margin_standard">8dp</dimen>
    <dimen name="margin_standard_double">16dp</dimen>
    <dimen name="padding_standard">8dp</dimen>


    <style name="goalContainer">
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard_double</item>
    </style>

    <style name="goalTitle">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingLeft">@dimen/padding_standard</item>
        <item name="android:background">@color/material_on_primary_emphasis_high_type</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="goalDescription">
        <item name="android:layout_marginLeft">@dimen/margin_standard</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
    </style>

</resources>